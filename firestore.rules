rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Events: 
    // - Create: Authenticated users can create
    // - Read: Owners can read their own events, Guest access might need to be public or link-based (checking specific fields)
    // - Update: Owners can update
    match /events/{eventId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.createdBy == request.auth.token.email || resource.data.createdBy == request.auth.uid); 
      // Note: "createdBy" field in your app seems to use email currently, but better to use UID for security references. 
      // For public invite links, you might need 'allow read: if true' or a specific condition.
      
      // For now, let's allow read if you are the creator OR if it's for public viewing (you might want to restrict this later)
      allow read: if true; 
      allow write: if request.auth != null;
    }

    // Submissions (Guests):
    // - Create: Anyone (guests) can create
    // - Read: Event owner can read
    match /submissions/{submissionId} {
       allow create: if true;
       allow read: if request.auth != null; // Simplified for owner
    }
  }
}
